<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebkg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Health Record"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#00A4FE"
                android:gravity="center" />
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="name"
                android:textSize="24sp"
                android:background="@drawable/custom_edittext"
                android:textColor="#00A4FE"
                android:padding="10dp"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/dateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Date of Birth"
                android:background="@drawable/custom_edittext"
                android:padding="10dp"
                android:textSize="24sp"
                android:textColor="#00A4FE"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/allergies"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:text="Allergies"
                android:padding="10dp"
                android:textSize="24sp"
                android:textColor="#00A4FE"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/currentMedication"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:text="Current medication"
                android:padding="10dp"
                android:textSize="24sp"
                android:textColor="#00A4FE"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/immunization"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:text="Immunization"
                android:padding="10dp"
                android:textSize="24sp"
                android:textColor="#00A4FE"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/labResults"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:text="Lab Results"
                android:padding="10dp"
                android:textSize="24sp"
                android:textColor="#00A4FE"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/custom_btn"
                android:text="Add"
                android:textSize="24sp"
                android:textColor="#fff"
                android:gravity="center"
                />
            <TextView
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/custom_btn"
            android:text="Edit"
            android:textSize="24sp"
            android:layout_marginStart="3dp"
            android:textColor="#fff"
            android:gravity="center" />
        </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
