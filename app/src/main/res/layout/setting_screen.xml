<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebkg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/settingImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/oval_border"
                android:src="@drawable/setting"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/name_setting"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Settings"
                android:textSize="25sp"
                android:textColor="#00A4FE"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text=" My Profile"
                android:textSize="24sp"
                android:background="@drawable/custom_edittext"
                android:textColor="#00A4FE"
                android:gravity="center|left"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_user_regular"/>

            <TextView
                android:id="@+id/wellness_challenge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text=" Wellness Challenge"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baselinew_spa_regular"
                android:textSize="24sp"
                android:textColor="#00A4FE"
                android:gravity="center|left"
                android:padding="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/health_recodrs"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:text=" Health Records"
                android:textSize="24sp"
                android:textColor="#00A4FE"
                android:padding="10dp"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_notes_medical_solid"/>

            <TextView
                android:id="@+id/emergency_contact"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:text=" Emergency Contact"
                android:textSize="24sp"
                android:padding="10dp"
                android:textColor="#00A4FE"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_emergency"
                />

            <TextView
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:text=" Notification"
                android:textSize="24sp"
                android:textColor="#00A4FE"
                android:padding="10dp"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_notification"/>

            <TextView
                android:id="@+id/mental_health"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:text=" Mental Health Resource"
                android:textSize="24sp"
                android:padding="10dp"
                android:textColor="#00A4FE"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_mental"/>

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:text=" More"
                android:textSize="24sp"
                android:textColor="#00A4FE"
                android:padding="10dp"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_more" />
            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_btn"
                android:text="Logout"
                android:textSize="24sp"
                android:textColor="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center|left"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_logout"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>
