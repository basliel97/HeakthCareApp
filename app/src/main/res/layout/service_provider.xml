<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@color/blue">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bakg"
            android:backgroundTint="@color/blue"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bakg"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Create New Health Tips"
                    android:textColor="#00A4FE"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <!-- Date of Appointment -->

                <EditText
                    android:id="@+id/editTextContent"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="contenet "
                    android:inputType="text"
                    android:padding="8dp" />

                <!-- Time of Appointment -->
                <EditText
                    android:id="@+id/editTextTipTime"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Date "
                    android:inputType="date"
                    android:padding="8dp" />


                <!-- Book Appointment Button -->
                <TextView
                    android:id="@+id/buttonSaveTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_btn"
                    android:padding="18dp"
                    android:text="Create Tip"
                    android:textColor="@android:color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bakg"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/heading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointments"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:textColor="#00A4FE"/>
            <!-- Date of Appointment -->

            <!-- Time of Appointment -->


            <!-- Book Appointment Button -->
            <TextView
                android:id="@+id/checkAppointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn"
                android:padding="18dp"
                android:text="Check Appointments"
                android:textColor="@android:color/white" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bakg"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/heading3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenges"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="#00A4FE"/>
                <!-- Date of Appointment -->

                <!-- Time of Appointment -->


                <!-- Book Appointment Button -->
                <TextView
                    android:id="@+id/addChallenges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_btn"
                    android:padding="18dp"
                    android:text="Add Challenges"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
